<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>

    <display-name>spring-otus</display-name>
    <description>spring-otus (WAR)</description>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>ru.otus.spring.server.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.otus.spring.server.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StatisticServlet</servlet-name>
        <servlet-class>ru.otus.spring.server.StatisticServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StatisticServlet</servlet-name>
        <url-pattern>/stat</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>